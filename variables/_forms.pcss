:root {
	/* -----------------------------------------------------------------------------
	 * Forms - Colors
	 * ----------------------------------------------------------------------------- */

	--tec-form-color-background: var(--tec-color-background);
	--tec-form-color-border-default: var(--tec-color-text-primary);
	--tec-form-color-border-active: var(--tec-color-accent-secondary);
	--tec-form-color-border-secondary: var(--tec-color-border-tertiary);
	--tec-form-color-accent-primary: var(--tec-color-accent-primary);

	/* -----------------------------------------------------------------------------
	 * Forms - Box Shadows
	 * ----------------------------------------------------------------------------- */

	--tec-form-box-shadow-default: var(--tec-box-shadow-default);
}

/* -----------------------------------------------------------------------------
 * For backwards Compatibility with plugins that have not been updated yet.
 * Remove these once ALL plugins have been updated to use the namespaced vars.
 * ----------------------------------------------------------------------------- */

:root {
	/* -----------------------------------------------------------------------------
	 * Forms - Colors
	 * ----------------------------------------------------------------------------- */

	--form-color-background: var(--tec-color-background);
	--form-color-border-default: var(--tec-color-text-primary);
	--form-color-border-active: var(--tec-color-accent-secondary);
	--form-color-border-secondary: var(--tec-color-border-tertiary);
	--form-color-accent-primary: var(--tec-color-accent-primary);

	/* -----------------------------------------------------------------------------
	 * Forms - Box Shadows
	 * ----------------------------------------------------------------------------- */

	--form-box-shadow-default: var(--tec-box-shadow-default);
}
